<launch>
  <include file="$(find atrv_mini_pkg)/launch/3dsensor.launch">
    <arg name="rgb_processing" value="true" />
    <arg name="depth_registration" value="false" />
    <arg name="depth_processing" value="false" />
    <arg name="scan_processing" value="true" />
  </include>

  <!--- launch gmapping slam -->
  <arg name="scan_topic" default="scan" />
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="base"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_update_interval" value="9.0"/> <!--- 9 -->
    <param name="maxUrange" value="25.0"/>
    <param name="sigma" value="0.05"/>
    <param name="kernelSize" value="1"/>
    <param name="lstep" value="0.05"/>
    <param name="astep" value="0.05"/>
    <param name="iterations" value="7"/>
    <param name="lsigma" value="0.075"/>
    <param name="ogain" value="3.0"/>
    <param name="lskip" value="0"/>
    <param name="srr" value="0.03"/> <!--- increased for 0.02 -->
    <param name="srt" value="0.04"/>
    <param name="str" value="0.03"/>
    <param name="stt" value="0.04"/>
    <param name="linearUpdate" value="0.2"/>
    <param name="angularUpdate" value="0.1"/>
    <param name="temporalUpdate" value="-1.0"/>
    <param name="resampleThreshold" value="0.5"/>
    <param name="particles" value="100"/>

    <param name="xmin" value="-10.0"/>
    <param name="ymin" value="-10.0"/>
    <param name="xmax" value="10.0"/>
    <param name="ymax" value="10.0"/>

    <param name="delta" value="0.05"/>
    <param name="llsamplerange" value="0.01"/>
    <param name="llsamplestep" value="0.01"/>
    <param name="lasamplerange" value="0.005"/>
    <param name="lasamplestep" value="0.005"/>
    <remap from="scan" to="$(arg scan_topic)"/>
  </node>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen"> 
    <rosparam file="$(find atrv_mini_pkg)/nav/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find atrv_mini_pkg)/nav/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find atrv_mini_pkg)/nav/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find atrv_mini_pkg)/nav/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find atrv_mini_pkg)/nav/base_local_planner_params.yaml" command="load" />

  <!-- remap topics for atrv_mini -->
    <remap from="/odom" to="/ATRVmini_node/odom"/>
    <remap from="/cmd_vel" to="/ATRVmini_node/cmd_vel"/>
  </node>

  <!--- start rviz -->
  <!---<node pkg="rviz" type="rviz" name="rviz" args="-d $(find atrv_mini_pkg)/rviz/gmapping_mv.rviz"/> -->

   <!-- start rgb camera -->
  <node pkg="image_view" type="image_view" name="image_view" output="screen">
     <remap from="/image" to="/camera/rgb/image_raw"/>
  </node>

</launch>
